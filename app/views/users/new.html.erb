<% provide :title, t(".signup") %>
<h1><%= t ".signup_page" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "shared/error_messages" %>
    <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, t(".confirm_password") %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit t(".create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
