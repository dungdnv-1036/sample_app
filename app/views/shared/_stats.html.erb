<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_follow_path @user do %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t ".followeing"%>
  <% end %>
  <%= link_to followers_follow_path @user do %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t ".follower"%>
  <% end %>
</div>
